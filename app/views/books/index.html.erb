<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render partial: "layouts/form", locals: { book: @new_book } %>
    </div>

    <div class="col-md-8">
    <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th> </th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <% @books.each do |book| %>
        <tr><tbody>
          <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tbody></tr>
      <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <footer>
      <div class="mx-auto col-12">CopyRight Infratop.inc</div>
    </footer>
</div>

<script src="https://kit.fontawesome.com/a99a2df629.js" crossorigin="anonymous"></script>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: #212529;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><%= link_to root_path do %><font color="white">Bookers</font><% end %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto navbar-dark bg-dark">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %><p class="text-white bg-dark"><i class="fas fa-home"></i>Home</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path do %><p class="text-white bg-dark"><i class="fas fa-users"></i>Users</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path do %><p class="text-white bg-dark"><i class="fas fa-book-open"></i>Books</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %><p class="text-white bg-dark"><i class="fas fa-sign-out-alt"></i>Log out</p><% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to root_path do %><p class="text-white bg-dark"><i class="fas fa-home"></i>Home</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path do %><p class="text-white bg-dark"><i class="fas fa-link"></i>About</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path do %><p class="text-white bg-dark"><i class="fas fa-user-plus"></i>Sign up</p><% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path do %><p class="text-white bg-dark"><i class="fas fa-sign-in-alt"></i>Log in</p><% end %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
</nav>
  <%= yield %>
  </body>
</html>

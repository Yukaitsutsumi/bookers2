<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/form", locals: { book: @new_book } %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tr><tbody>
          <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><% end %></td>
          <td><%= link_to book_path(@books.ids) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tbody></tr>
        <% end %>
      </table>
    </div>
  </div>
</div>